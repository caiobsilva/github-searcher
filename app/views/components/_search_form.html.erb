<div class="search-form">
  <%= form_tag search_index_path, method: :get do %>
    <%=
      text_field_tag :query, nil,
      placeholder: t("search_form.placeholder"),
      class: "form-control",
      required: "required"
    %>
    <%= submit_tag "search", class: "btn btn-primary" %>
  <% end %>
</div>
